<div class="row margin-top-navbar">
  <div class="col-md-12 mx-auto">
    <div class="container-fluid">
      <div class="row mt-4 ml-2 mb-4">
        <%= simple_form_for [@project, @task] do |f| %>
          <%= f.input :description, label: false, placeholder: 'Task Description' %>
          <div class="d-flex justify-content-around">
            <div>
              <%= f.input :priority, label: false, placeholder: 'Priority', collection: Task.priorities.keys.map { |w| [w.humanize, w] } %>
              <%= f.input :deadline, as: :string, label: false, placeholder: 'Deadline',  input_html: {class: "deadline-datepicker"} %>
            </div>
            <%= f.submit "Valider", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



