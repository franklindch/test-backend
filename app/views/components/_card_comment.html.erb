<% comments.each do |comment| %>
  <div class="card mt-2">
    <div class="card-body">
      <p class="mt-3"><%= comment.description %></p>
      <div class="d-flex justify-content-between">
        <% if comment.file_url %>
          <%= link_to "Upload file", comment.file.url, class: 'comment-links' %>
        <% else %>
          <small>No file joined.</small>
        <% end %>
        <%= link_to 'Delete comment', task_comment_path(task, comment), method: :delete, class: 'comment-links'%>
      </div>
    </div>
  </div>
<% end %>
