<div class="row margin-top-navbar">
  <div class="col-md-3 mx-auto mt-5">
    <div class="container-fluid">
      <div class="row mt-4 ml-2 mb-4">
        <div class="form-login">
          <h2>Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <%= f.input :email, required: false, autofocus: true, placeholder: "franklin@gmail.com" %>
              <%= f.input :password, required: false, placeholder: "••••••" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


              <%= f.button :submit, "Log in", class: 'btn btn-primary' %>

          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
