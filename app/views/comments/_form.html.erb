<div class="row margin-top-navbar">
  <div class="col-md-12 mx-auto">
    <div class="container-fluid">
      <div class="row mt-2">
          <%= simple_form_for [@task, @comment] do |f| %>
            <%= f.input :description, label: false, placeholder: 'Comment Description', class: 'form-group' %>
            <div class="d-flex justify-content-around">
              <%= f.input :file, label: false %>
              <%= f.input :file_cache, as: :hidden %>
              <%= f.submit "Valider", class: 'btn btn-success' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

